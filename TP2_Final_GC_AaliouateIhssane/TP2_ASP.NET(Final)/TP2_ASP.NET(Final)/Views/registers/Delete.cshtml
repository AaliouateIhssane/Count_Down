@model TP2_ASP.NET_Final_.Models.register

@{
    ViewBag.Title = "Refuse";
    Layout = "~/Views/Shared/PageDisposition.cshtml";
}





<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <!-- [ page content ] start -->
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <div class="card table-card review-card" style="width:320px">
                            <h3>Are you sure you want to delete this?</h3>
                            <div style="margin-left:8px">
                                <h4>Register</h4>
                                <hr />
                                <dl class="dl-horizontal" >
                                    <dt>
                                        User Name
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>

                                    <dt>
                                        Passeword
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.UserPassword)
                                    </dd>

                                    <dt>
                                        Job
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.job)
                                    </dd>

                                    <dt>
                                        Email
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.email)
                                    </dd>

                                    

                                    <dt>
                                        Date Registration
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.DateR)
                                    </dd>

                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Refuse" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
