@model IEnumerable<TP2_ASP.NET_Final_.Models.register>

@{
    ViewBag.Title = "Registrations";
    Layout = "~/Views/Shared/PageDisposition.cshtml";
}



<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <!-- [ page content ] start -->
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <div class="card table-card review-card" style="width:900px">
                            <table class="table">
                                <tr>
                                    <th>
                                        User Name
                                    </th>
                                    <th>
                                        Password
                                    </th>
                                    <th>
                                        Job
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Photo
                                    </th>
                                    <th>
                                        Date Registration
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserPassword)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.job)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            <img class="img-responsive" src="@Url.Content(item.Photo)" width="100%" height="60px" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateR)
                                        </td>
                                        <td>
                                           
                                            @Html.ActionLink("Accept", "Details", new { UserName = item.UserName, email = item.email }) |
                                            @Html.ActionLink("Refuse", "Delete", new { id = item.id, UserName = item.UserName, email = item.email })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
